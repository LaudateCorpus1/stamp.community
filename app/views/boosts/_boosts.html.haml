- if boost.reputation > 0
  .label
    .ui.green.label
      = "+#{boost.reputation}"
- else
  .label
    .ui.red.label
      = boost.reputation
.content
  %span.date
    = time_ago_in_words(boost.created_at)
    ago
  - if boost.trigger.key == "user.signup"
    you signed up
  -else
    = boost.trigger.owner_type
    = render partial: "activities/#{boost.trigger.key}", locals: { activity: boost.trigger }
