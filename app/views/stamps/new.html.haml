%div.ui.grid.container
  %div.sixteen.wide.column
    %h1.header
      New Stamp for trello.com
      %a
        %i.purple.external.icon
    %div.ui.divider{style: "margin-bottom: -5px;"}
  %div.nine.wide.column
    = render 'partials/errors', object: @stamp

    %div.ui.styled.fluid.accordion{data: {controller: 'new-stamp', new_stamp: {set_percentage: @stamp.percentage, set_label_id: @stamp.label_id}}}
      = form_for @stamp, html: {class: %w[ui form]} do |f|
        = f.hidden_field :stampable_type, value: 'Domain'
        = f.hidden_field :stampable_id, value: params[:domain_id]
        -# render "shared/errors", object: @stamp
        %div.title
          1. Select Label
          = button_tag '', type: 'button', class: %w[ui grey basic tiny button hidden ml5], data: {target: 'new-stamp.selectedLabel'}
          = f.hidden_field :label_id, data: {target: 'new-stamp.labelId'}
        %div.content
          - @labels.each do |label|
            = button_tag label.name, type: 'button', class: %w[ui grey basic tiny button], data: {action: 'new-stamp#selectLabel', label_id: label.id}
          %div.ui.right.aligned.basic.segment
            %div.ui.relaxed.horizontal.list{style: "border-top: 1px solid rgba(34, 36, 38, 0.15);"}
              %div.item
                %h6.ui.purple.header
                  New Stamp
              %div.item
                %h6.ui.teal.header
                  Re Stamp
              %div.item
                %h6.ui.grey.header
                  Active Stamp
        %div.title
          2. Define percentage & comment
          = f.hidden_field :percentage, id: 'stamp_percentage'
        %div.content
          %div.ui.grid
            %div.fourteen.wide.column
              %div.ui.purple.range#stamp_percentage_range
            %div.two.wide.column
              %span#stamp_percentage_display
          %h3
            Comment
          %textarea
          .ui.divider
          = f.submit 'Create Stamp', class: %w[ui purple basic big button mb0], style: 'box-shadow: 0px 0px 2px 2px #A333C8 inset !important;'
  %div.six.wide.right.floated.column
    %div.ui.basic.segment
      %h3
        Other Stamps of this domain
      %div.ui.divider
      %div.ui.grid
        %div.five.wide.column
          %h4.ui.middle.aligned.header
            Management
        %div.eleven.wide.column
          %div.bar.float.right
            %div.ui.purple.small.progress{style: "background: white;"}
              %div.bar{style: "width: 39%; z-index: 10; "}
                %div.progress
                  39%
            %div.ui.teal.small.progress{style: "background: white;"}
              %div.bar.bartwo{style: "width: 49%; margin-top: -39px;"}

        %div.five.wide.column
          %h4.ui.middle.aligned.header
            Business
        %div.eleven.wide.column
          %div.bar.float.right
            %div.ui.purple.small.progress{style: "background: white;"}
              %div.bar{style: "width: 80%; z-index: 10; "}
                %div.progress
                  80%
            %div.ui.teal.small.progress{style: "background: white;"}
              %div.bar.bartwo{style: "width: 60%; margin-top: -39px;"}
        %div.five.wide.column
          %h4.ui.middle.aligned.header
            ADS
        %div.eleven.wide.column
          %div.bar.float.right
            %div.ui.purple.small.progress{style: "background: white;"}
              %div.bar{style: "width: 15%; z-index: 10; "}
                %div.progress
                  15%
    %div.ui.basic.segment
      %h3
        Suggested
      %div.ui.divider
      %div.ui.grid
        %div.five.wide.column
          %h4.ui.middle.aligned.header
            Management
        %div.eleven.wide.column
          %div.bar.float.right
            %div.ui.teal.small.progress{style: "background: white;"}
              %div.bar{style: "width: 49%; z-index: 10; "}
                %div.progress
                  49%
        %div.five.wide.column
          %h4.ui.middle.aligned.header
            Business
        %div.eleven.wide.column
          %div.bar.float.right
            %div.ui.teal.small.progress{style: "background: white;"}
              %div.bar{style: "width: 60%; z-index: 10; "}
                %div.progress
                  60%
        %div.five.wide.column
          %h4.ui.middle.aligned.header
            Animals
        %div.eleven.wide.column
          %div.bar.float.right
            %div.ui.teal.small.progress{style: "background: white;"}
              %div.bar{style: "width: 40%; z-index: 10; "}
                %div.progress
                  40%
