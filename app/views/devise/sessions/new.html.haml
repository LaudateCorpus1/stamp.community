- content_for :container_class, 'middle aligned centered grid'
- content_for :container_style, 'height: 70%;'

%div.four.wide.column
  %div.ui.segment{ style: 'box-shadow: 5px 5px 20px -2px #A333C8 ; padding-bottom: 20px'}
    = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: %w[ui form header]}) do |f|
      %h1
        Log In
      %div.field
        = f.label :email
        %div.ui.left.icon.input
          = f.email_field :email, autofocus: true, class: %w[ui left icon input]
          %i.mail.icon
      %div.field
        = f.label :password
        %div.ui.left.icon.input
          = f.password_field :password, autocomplete: 'off', class: 'form-control'
          %i.lock.icon
      - if devise_mapping.rememberable?
        .ui.checkbox
          = f.check_box :remember_me
          = f.label :remember_me
      = f.submit 'Log in', class: 'ui purple basic big button'
    = render 'devise/shared/links'
