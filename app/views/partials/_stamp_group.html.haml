%span{data: {controller: 'collapsible'}}
  - if @domain.stamps.send(title.parameterize.underscore).present?
    - if local_assigns.fetch :header, true
      %h5.collapsible{data: {action: 'click->collapsible#toggle'}}
        - if collapsed ||= false
          = fa_icon('angle-down', data: {target: 'collapsible.angle'})
        - else
          = fa_icon('angle-up', data: {target: 'collapsible.angle'})
