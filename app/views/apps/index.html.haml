%div.ui.middle.aligned.centered.container{style: 'cursor: pointer; margin-bottom: 10rem;'}
  %h1
    All Apps:
    = link_to 'New App', new_app_path, class: 'ui basic purple right floated massive button'
  %table.ui.selectable.celled.table
    %thead
      %tr
        %th
          App
        %th
          Description
        %th{:colspan => "3"}
          Operating System
        %th
          User
    %tbody
      - @apps.each do |app|
        %tr{ onclick: "location.href='#{app_path(app)}'" }
          %td
            %h4.ui.purple.header
              = app.name
          %td
            = app.description
          %td
            %i.large.icons
              %i.linux.icon{ class: ('disabled' unless app.linux) }
              %i.corner.icon{ class: app.linux ? 'checkmark green' : 'x disabled' }
          %td
            %i.large.icons
              %i.apple.icon{ class: ('disabled' unless app.macos) }
              %i.corner.icon{ class: app.macos ? 'checkmark green' : 'x disabled' }
          %td
            %i.large.icons
              %i.windows.icon{ class: ('disabled' unless app.windows) }
              %i.corner.icon{ class: app.windows ? 'checkmark green' : 'x disabled' }
          %td
            = app.user.username
