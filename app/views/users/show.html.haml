%span#users
  .row
    = render partial: 'partials/window', locals: { footer: true }
    = render partial: 'users/partials/description'
    = render partial: 'users/partials/stats'

  .row
    .col-12
      %h4 Top Labels
    .col-5
      - @user.top_labels.each do |label|
        .row.label.bg-light-2
          .col-12.align-self-center
            = link_to label_path(label) do
              .btn.btn-primary
                = label.name
            %span{style: "float: right;"}
              = image_tag 'stamp_j3rik0_no_text_icon', style: 'height: 1em;'
              = label.count
